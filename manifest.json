{
  "manifest_version": 2,
  "name": "Copy Markdown link",
  "version": "1.0.0",

  "description": "Copy current web page as a Markdown link.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "background": {
    "scripts": [ "dist/background.js" ]
  },

  "page_action": {
    "default_icon": {
      "48": "icons/border-48.png"
    },
    "show_matches": [ "http://*/*", "https://*/*" ],
    "default_title": "Copy",
    "default_popup": "popup.html"
  }
}
